@page
@model ProyectoCiclo3.App.Frontend.Pages.FormAeropuertoModel
@{
    var aeropuerto = Model.Aeropuerto;
}

 
<div class="text-center">
  <form method="POST">
    <label for="nombre" class="form-label">Nombre:</label>
    <input type="text" class="form-control" id="nombre"  placeholder="Nombre" asp-for="@aeropuerto.nombre" required>
    <label for="ciudad" class="form-label">Ciudad:</label>
    <input type="text" class="form-control" id="ciudad"  placeholder="Ciudad" asp-for="@aeropuerto.ciudad" required>
    <label for="pais" class="form-label">Pais: </label>
    <input type="text" class="form-control" id="pais"  placeholder="Pais" asp-for="@aeropuerto.pais" required>
    <label for="coord_x" class="form-label">Coordenadas X:</label>
    <input type="number" class="form-control" id="coord_x"  placeholder="Coordenadas X" asp-for="@aeropuerto.coord_x" required>
    <label for="coord_y" class="form-label">Coordenadas Y:</label>
    <input type="number" class="form-control" id="coord_y"  placeholder="Coordenadas X" asp-for="@aeropuerto.coord_y" required>
    <hr>
    <button type="submit" class="btn btn-success">Enviar</button>
  </form>
</div>